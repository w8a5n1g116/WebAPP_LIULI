@using WebAPP_LIULI.Models;
@{
    User m = Model;
    if (m == null)
    {
        m = new User();
    }

}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">

        <h4 class="page-title">顾客详情</h4>
    </div>
</div>
<!-- end page title end breadcrumb -->


<div class="row">

    <div class="col-xl-3 col-md-6">
        <div class="card-box">
            <form class="form-horizontal" role="form" action="/Home/UserDetail" method="post">
                <input hidden="hidden" type="text" name="Id" value="@m.Id">
                <div class="form-group row">
                    <label class="col-md-2 col-form-label">用户名称</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" name="UserName" value="@m.UserName">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">用户权限</label>
                    <div class="col-md-10">
                        <select class="form-control" name="UserPermission">
                            <option value="无" @if (m.UserPermission == "无") { <text> selected </text> }>无</option>
                            <option value="管理员" @if (m.UserPermission == "管理员") { <text> selected </text> }>管理员</option>
                            <option value="总经理" @if (m.UserPermission == "总经理") { <text> selected </text> }>总经理</option>
                            <option value="班长" @if (m.UserPermission == "班长") { <text> selected </text> }>班长</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">用户班组</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" name="UserTeam" value="@m.UserTeam">
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-md-2 col-form-label">用户类型</label>
                    <div class="col-md-10">
                        <select class="form-control" name="UserType">
                            <option value="员工" @if (m.UserType == "员工") { <text> selected </text> }>员工</option>
                            <option value="班长" @if (m.UserType == "班长") { <text> selected </text> }>班长</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">联系电话</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" name="UserPhone" value="@m.UserPhone">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">备注</label>
                    <div class="col-md-10">
                        <textarea class="form-control" name="Remarks" id="Remarks" rows="2">@m.Remarks</textarea>
                    </div>
                </div>

                <button type="submit" class="btn btn-block btn-xs btn-purple waves-effect waves-light">保存</button>
            </form>
        </div>
    </div><!-- end col -->

</div>
<!-- end row -->