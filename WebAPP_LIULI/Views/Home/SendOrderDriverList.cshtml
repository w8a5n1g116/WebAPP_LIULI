@using WebAPP_LIULI.Models;
@{
    List<SendOrder> modelList = Model;
}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">

        <h4 class="page-title">发货列表</h4>
    </div>
</div>
<!-- end page title end breadcrumb -->


<div class="row">

    <div class="col-12">

        @foreach (var m in modelList)
        {
        <div class="card-box">
            <dl class="row">
                <dt class="col-6">顾客名称</dt>
                <dd class="col-6">@m.MidSendOrder.Order.Customer.CustomerName</dd>
                <dt class="col-6">顾客地址</dt>
                <dd class="col-6">@m.CustomerAddress</dd>
                <dt class="col-6">产品名称</dt>
                <dd class="col-6">@m.MidSendOrder.Order.ProductCount</dd>
                <dt class="col-6">送货数量/吨</dt>
                <dd class="col-6">@m.SendCount 吨</dd>
                <dt class="col-6">送货时间</dt>
                <dd class="col-6">@m.SendTime.Value.ToString("yyyy-MM-dd")</dd>

            </dl>
            <a href="/Home/SendOrderDriver?id=@m.Id" class="btn btn-block btn-xs btn-purple waves-effect waves-light">成品发货</a>
        </div>

        }

    </div><!-- end col -->

    <script>

    </script>

</div>
<!-- end row -->