@using WebAPP_LIULI.Models;
@{
    List<MaterialOrder> modelList = Model;
}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">

        <h4 class="page-title">原料收货列表</h4>
    </div>
</div>
<!-- end page title end breadcrumb -->


<div class="row">

    <div class="col-12">

        @foreach (var m in modelList)
        {
        <div class="card-box">
            <dl class="row">
                <dt class="col-6">任务编号</dt>
                <dd class="col-6">@m.TaskId</dd>
                <dt class="col-6">送货数量/吨</dt>
                <dd class="col-6">@m.SendCount 吨</dd>
                <dt class="col-6">送货时间</dt>
                <dd class="col-6">@m.SendTime.Value.ToString("yyyy-MM-dd")</dd>
                <dt class="col-6">司机姓名</dt>
                <dd class="col-6">@m.MaterialDriver.Name</dd>
                <dt class="col-6">司机电话</dt>
                <dd class="col-6">@m.MaterialDriver.PhoneNumber</dd>
                <dt class="col-6">车牌号</dt>
                <dd class="col-6">@m.MaterialDriver.CarNumber</dd>
                <dt class="col-6">车型</dt>
                <dd class="col-6">@m.MaterialDriver.CarType</dd>

            </dl>
            <a href="/Home/ReceiveMaterial?id=@m.Id" class="btn btn-block btn-xs btn-purple waves-effect waves-light">原料收货</a>
        </div>

        }

    </div><!-- end col -->

    <script>

    </script>

</div>
<!-- end row -->